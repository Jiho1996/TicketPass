<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.com.ticketpass">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:usesCleartextTraffic="true"
        android:name=".TicketPassApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launch"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launch"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".selectsigntype.SelectTypeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".guest.login.GuestLoginActivity" />

        <activity android:name=".host.login.HostSignUpActivity" />

        <activity android:name=".host.login.HostLoginActivity" />

        <activity android:name=".host.HostReservationActivity" >

        </activity>
        <activity android:name=".host.HostEditGuestActivity">

        </activity>
        <activity android:name=".host.HostEventManageActivity">

        </activity>
        <activity android:name=".host.HostManageActivity">

        </activity>

        <activity android:name=".guest.login.GuestSignupActivity"/>

        <activity android:name=".guest.GuestMainActivity" >
        </activity>

        <activity android:name=".host.HostMainActivity" />

    </application>

</manifest>